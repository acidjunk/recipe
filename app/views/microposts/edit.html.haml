=provide(:title, 'Bewerk micropost')
%h1 Bewerk je bericht
.row
  .span6
    = form_for @micropost do |f|
      = render 'shared/error_messages', object: f.object
      =f.bootsy_area :content, editor_options: { link: true, color: false, lists: false, image: false, font_styles: false, color: false, emphasis: true }, rows: 12, class: 'form-control'
      =f.submit('Bewaar bericht', class:'btn btn-large btn-primary')